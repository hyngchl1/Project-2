<%= form_for(@blog) do |f| %>
  <ul>
  <% @blog.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title, class: "feel_title" %><br />
    <%= f.text_field :title, :size => 21 %>
  </p>
  <p>
    <%= f.label :body, class: "feel_body" %><br />
    <%= f.text_area :body, :size => 20 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>